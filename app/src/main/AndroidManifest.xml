<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.courseregistration">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CourseRegistration">

        <activity android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".SignUpActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name=".AdminLogin"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".instructorLogin"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".StudentLogin"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".addCourse"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".editCourse"
            android:windowSoftInputMode="stateHidden"></activity>

    </application>

</manifest>